<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="fr3d_ldap.ldap_manager.class">FR3D\LdapBundle\Ldap\LdapManager</parameter>
        <parameter key="security.encoder.ldap_sha.class">FR3D\LdapBundle\Security\User\ShaPasswordEncoder</parameter>
    </parameters>

    <services>

        <service id="fr3d_ldap.ldap_manager.default" class="%fr3d_ldap.ldap_manager.class%">
            <argument type="service" id="fr3d_ldap.ldap_driver" />
            <argument type="service" id="fr3d_ldap.user_manager" />
            <argument>%fr3d_ldap.ldap_manager.parameters%</argument>
        </service>

        <service id="security.encoder.ldap_sha" class="%security.encoder.ldap_sha.class%"/>

    </services>

</container>
